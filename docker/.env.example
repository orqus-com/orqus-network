# Orqus Node Configuration
# Copy this file to .env and modify as needed

# Network selection: testnet or mainnet
NETWORK=testnet

# Chain ID (must match network)
CHAIN_ID=153871

# Docker image versions
RETH_IMAGE=ghcr.io/orqus-chain/orqus-reth:latest
ORQUSBFT_IMAGE=ghcr.io/orqus-chain/orqusbft:latest
COMETBFT_IMAGE=cometbft/cometbft:v0.38.15

# Data directory (host path)
DATA_DIR=./data

# P2P configuration
# Set to your public IP if running behind NAT
EXTERNAL_IP=

# Seed nodes (comma-separated)
# Get from networks/${NETWORK}/chain-info.json
COMETBFT_SEEDS=
RETH_BOOTNODES=

# RPC configuration
# Set to 0.0.0.0 to expose externally (not recommended for production)
RPC_HOST=127.0.0.1
RPC_PORT=8545
WS_PORT=8546

# Logging
LOG_LEVEL=info

# Optional: Fee recipient address for block rewards
FEE_RECIPIENT=0x0000000000000000000000000000000000000000
